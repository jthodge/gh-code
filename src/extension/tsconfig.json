    "declaration": true,
    "inlineSources": true,
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../dist",
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "target": "es6",
    "typeRoots": [
